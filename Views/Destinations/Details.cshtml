@{
    Layout = "_Layout";
}

@model travel_mvc.Models.Destination

<h2>Destination - @Model.Name</h2>
<hr>
@Html.ActionLink("Edit Destination", "Edit", new { id = Model.DestinationId })<br>
@Html.ActionLink("Delete Destination", "Delete", new { id = Model.DestinationId })
<hr>
<ul>
    <li>Name: @Html.DisplayFor(modelItem => Model.Name)</li>
    <li>Country: @Html.DisplayFor(modelItem => Model.Country)</li>
    <li>City: @Html.DisplayFor(modelItem => Model.City)</li>
    <li>Average Rating: @Html.DisplayFor(modelItem => Model.AvgRating)</li>
</ul>
<hr>
<h5>Reviews for @Model.Name</h5>
@foreach (var review in Model.Reviews)
{
    <ul>
        <li>Author: @review.UserName</li>
        <li>Rating: @review.Rating</li>
        <li>Review: @review.ReviewText</li>
    </ul>
}

@Html.ActionLink("Add a Review", "Create", "Reviews")
<hr>
@Html.ActionLink("Back", "Index")
